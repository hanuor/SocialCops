<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f6e9ca" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:id="@+id/lineofseperation"
            android:layout_below="@+id/tv"
            android:background="#ffffff"
            android:layout_marginTop="30dp"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_username"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/lineofseperation"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_username"

                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Username "
                android:layout_below="@+id/tv"/>
        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_password"
            android:layout_width="match_parent"
            android:visibility="invisible"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/input_layout_username"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/input_password"

                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint=" Password "/>
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_password"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:id="@+id/account_buttons">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/login"
                android:backgroundTint="#ebce89"
                android:layout_margin="7dp"
                android:text="Login"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="7dp"
                android:backgroundTint="#ebce89"
                android:layout_toRightOf="@+id/login"
                android:id="@+id/signUp"
                android:text="SignUp"/>


        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:id="@+id/lineofseperationend"
            android:layout_below="@+id/account_buttons"
            android:background="#ffffff"
            android:layout_marginTop="30dp"/>

    </RelativeLayout>


</RelativeLayout>